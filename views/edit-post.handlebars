<section class="edit-post">
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <label for="post-title">Title</label>
      <input name="post-title" id="edit_post_title" type="text" value="{{post.title}}" />
      <label for="post-text">Content</label>
      <textarea name="post-text" id="edit_post_text">{{post.post_text}}</textarea>
    </div>

    <div class="center">
      <button type="submit" class="save-post-btn">Update post</button>
      <button type="button" class="delete-post-btn">Delete post</button>
    </div>
  </form>
  <div>
    <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
  </div>

  <form class="comment-form">
    <div>
      <textarea name="comment-body"></textarea>
    </div>

    <div>
      <button type="submit">add comment</button>
    </div>
  </form>

  {{> comments post.comments}}

</section>

<script src="/javascript/editPost.js"></script>
<script src="/javascript/deletePost.js"></script>
<script src="/javascript/comment.js"></script>